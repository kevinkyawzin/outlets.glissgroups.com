        }

        function cancelOrderTaking(soid,paramtr) {
            soidtoVoid = soid;
            openPasswordDialog();
        }

        function voidOrderTaking() {
       
            $.ajax({
                url: '@Url.Action("VoidSO", "POS")',
                data: JSON.stringify({ soid: soidtoVoid, resource: $('#rcode').val(), uname: $('#txtname').val(), pwd: $('#txtpwd').val() }),
