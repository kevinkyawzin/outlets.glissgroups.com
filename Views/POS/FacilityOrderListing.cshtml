                type: 'POST',
                async: false,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data == "SUCCESS") {
                        CloseOrderManageDialog();
                        getFacilityOrderList();
                    }
                    else {

                    }
