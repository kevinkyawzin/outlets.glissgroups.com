<script type="text/javascript">
    $(function () {
        var img = $("#photo").val();
        if ($("#photo").val() == "")
            img = "profile.png";

        $("#imgMember").attr("src", "../assets/img/Members/" + img);
    });

    function UploadImage() {

        var form_data = new FormData();
        var fileInput = document.getElementById('fileUpload');

        for (i = 0; i < fileInput.files.length; i++) {
            form_data.append(fileInput.files[i].name, fileInput.files[i]);
        }
        var xhr = new XMLHttpRequest();
        xhr.open('POST', 'UploadImage');
        xhr.send(form_data);
        xhr.onreadystatechange = function () {
            if (xhr.readyState == 4 && xhr.status == 200) {
                $("#photo").val(xhr.responseText.substring(1, xhr.responseText.length - 1));
                var img = $("#photo").val();
                if ($("#photo").val() == "")
                    img = "profile.png";
                $("#imgMember").attr("src", "../assets/img/Members/" + img);
            }
        }
        return false;
    }

    function getMemberbalance() {
        var mid = $('#id').val();
        //alert("topup");
        $.ajax({
            url: '@Url.Action("getMemberList", "CusSup")',
            data: { mid: mid },
            type: 'POST',
            success: function (data) {
                //populateReservedList(data);
                //alert(data.length);
                if (data.length > 0) {
                    $('#CBalance').val(Math.round(data[0].CBalance));
                    $('#BBalance').val(Math.round(data[0].BBalance));
                    $('#CReserved').val(Math.round(data[0].CReserved));
                    $('#BReserved').val(Math.round(data[0].BReserved));
                    $('#CAvailable').val(Math.round(data[0].CAvailable));
                    $('#BAvailable').val(Math.round(data[0].BAvailable));
                }
            },
            error: function (ts) { alert(ts.responseText) }
        });
    }
</script>