                                        </div>
                                         <span>@Html.ValidationMessageFor(model => model.postalcode)</span>	
			                        </div>
		                        </div>

		                        <div class="form-group">
			                        <label class="control-label" for="input1">@Html.LabelFor(model => model.nric)</label>
			                        <div class="controls row">
                                        <div class="col-lg-4">
                                            @Html.TextBoxFor(model => model.nric, new { @class ="form-control"})                  
                                        
                                        </div>
                                         <span>@Html.ValidationMessageFor(model => model.nric)</span>	
			                        </div>
		                        </div>

		                        <div class="form-group">
			                        <label class="control-label" for="input1">@Html.LabelFor(model => model.tel)</label>
			                        <div class="controls row">
                                        <div class="col-lg-4">
                                            @Html.TextBoxFor(model => model.tel, new { @class ="form-control"})                  
                                        
                                        </div>
                                         <span>@Html.ValidationMessageFor(model => model.tel)</span>	
			                        </div>
		                        </div>

                                <div class="form-group">
			                        <label class="control-label" for="input1">@Html.LabelFor(model => model.fax)</label>
			                        <div class="controls row">
                                        <div class="col-lg-4">
                                            @Html.TextBoxFor(model => model.fax, new { @class ="form-control"})                  
                                        
                                        </div>
                                         <span>@Html.ValidationMessageFor(model => model.fax)</span>	
			                        </div>
		                        </div>
                                <div class="form-group">
			                        <label class="control-label" for="input1">@Html.LabelFor(model => model.mobile)</label>
			                        <div class="controls row">
                                        <div class="col-lg-4">
                                            @Html.TextBoxFor(model => model.mobile, new { @class ="form-control"})                  
                                        
                                        </div>
                                         <span>@Html.ValidationMessageFor(model => model.mobile)</span>	
			                        </div>
		                        </div>
                                <div class="form-group">
			                        <label class="control-label" for="input1">@Html.LabelFor(model => model.email)</label>
			                        <div class="controls row">
                                        <div class="col-lg-4">
                                            @Html.TextBoxFor(model => model.email, new { @class ="form-control"})                  
                                        
                                        </div>
                                         <span>@Html.ValidationMessageFor(model => model.email)</span>	
			                        </div>
		                        </div>
					            <div class="form-group">
						            <label class="control-label" for="selectError30">@Html.LabelFor(model => model.position)</label>
						            <div class="controls row">
                                        <div class="col-lg-4">
                                        @Html.DropDownListFor(model => model.position, new SelectList(@ViewBag.PositionOptions,"position","position"), new { @class ="form-control"})
                                        </div>
                                        @Html.ValidationMessageFor(model => model.position)
						            </div>
					            </div>
					            <div class="form-group">
						            <label class="control-label" for="selectError30">@Html.LabelFor(model => model.stafftype)</label>
						            <div class="controls row">
                                        <div class="col-lg-4">
                                        @Html.DropDownListFor(model => model.stafftype, new SelectList(@ViewBag.StaffTypeOptions,"stafftype","stafftype"), new { @class ="form-control"})
                                        </div>
                                        @Html.ValidationMessageFor(model => model.stafftype)
						            </div>
					            </div>
		                        <div class="form-actions">
			                        <button type="submit" class="btn btn-primary" value="Save">Save changes</button>
			                        <button type="reset" class="btn">Cancel</button>
		                        </div>
                </fieldset>
            }                 
            </div>
        </div> @*box*@
    </div>
</div>@*row*@
    
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

