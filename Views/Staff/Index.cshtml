@model IEnumerable<BigMac.Models.Common_m_Staff>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
		<div class="box col-sm-12">			                    
            <div >
                <p >
                <a href="@Url.Action("Create","Staff")" >
	                <i class="fa fa-plus" ></i> 
                    Add New Staff
                </a>
                </p>
            </div>
        </div>
    </div>
	<div class="row">		
		<div class="col-lg-12">
			<div class="box">
				<div class="box-header" data-original-title>
					<h2><i class="fa fa-user"></i><span class="break"></span>Members</h2>
					<div class="box-icon">
					    <a href="#" class="btn-setting"><i class="fa fa-wrench"></i></a>
					    <a href="#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
					    <a href="#" class="btn-close"><i class="fa fa-times"></i></a>
					</div>
				</div>
				<div class="box-content">
					<table class="table table-striped table-bordered bootstrap-datatable datatable">
						<thead>
							<tr>
								<th>Name</th>
								<th>Position</th>
								<th>Type</th>
								<th>Tel</th>
								<th>Fax</th>
                                <th>Mobile</th>
                                <th>E-Mail</th>
                                <th></th>
							</tr>
                        </thead>   
                        <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.position)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.stafftype)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tel)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.fax)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.mobile)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.email)
                                        </td>                                                
									    <td class="center">
										    <a class="btn btn-info" href="@Url.Action("Edit", "Staff", new { id = item.id })" title ="Edit Staff">
											    <i class="fa fa-edit"></i>                                            
										    </a>
										    <a class="btn btn-danger" href="@Url.Action("Delete", new { id=item.id })" title ="Remove Staff">                                            
											    <i class="fa fa-trash-o "></i> 
										    </a>
									    </td>
@*                                                    
                                            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
                                            @Html.ActionLink("Details", "Details", new { id=item.id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id=item.id })
*@
                                                
                                    </tr>                                            
                                }
                        </tbody>
                    </table>							   
                </div> @*box-content*@
            </div> @*box*@
        </div>
    </div> @*row*@
