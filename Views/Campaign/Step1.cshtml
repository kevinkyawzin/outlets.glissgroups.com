@model BigMac.Models.Campaign_m_Campaign

@{
    ViewBag.Title = "Step1";
    Layout = "~/Views/Shared/_CampaignLayout.cshtml";    
    //var db = Database.Open("BigMacEntities");
    //var uname = User.Identity.Name;     
    //var data = db.Query("SELECT * FROM MyTable");
