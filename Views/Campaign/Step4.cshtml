@model BigMac.Models.Campaign_m_Campaign

@{
    Layout = "~/Views/Shared/_CampaignLayout.cshtml";
    ViewBag.Title = "Step4";
}

    <div class="row">
        <div class ="col-lg-12">
            <div class="box">
                <div class ="box-header">
							<h2><i class="icon-info-sign"></i>Information</h2>
							<div class="box-icon">
								<a href="#" class="btn-setting"><i class="icon-wrench"></i></a>
								<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
								<a href="#" class="btn-close"><i class="icon-remove"></i></a>
							</div>
                </div> 
                <div class ="box-content">
                @using (Html.BeginForm("Step4", "Campaign", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.ValidationSummary(true)   
                    <fieldset class ="col-sm-12">
                    <div id="MyWizard" class="wizard">
			            <ul class="steps">
				            <li data-target="#step1" class="complete" ><span class="badge badge-info">1</span></li>
				            <li data-target="#step2" class="complete" ><span class="badge">2</span></li>
				            <li data-target="#step3" class="complete"><span class="badge">3</span></li>
				            <li data-target="#step4" class="active"><span class="badge">4</span></li>				    
			            </ul>
			            <div class="actions">
					        <a class="btn btn-prev"  href="@Url.Action("Step3", "Campaign", new { id = Model.id})">
                                <i class="icon-arrow-left"></i> Prev								
					        </a>
					        <a class="btn btn-success btn-next" href="#" aria-disabled="true">
                                Next<i class="icon-arrow-right"></i>
					        </a>
			            </div>
                    </div>
                        <div class="form-group">
                           Successfully Save for @Model.gamedesc .
                        </div>
                        <div >
                            <p >
                            <a href="@Url.Action("Index", "Campaign")" >	                            
                                <b style ="color:green;"><u>Go Back to Campaign List</u></b>
                            </a>
                            </p>
                        </div>
                    </fieldset>
                }
             </div>
        </div> @*box*@
    </div>
</div>@*row*@
<div class="row">
    <div class="col-lg-12">
        <div class="box">

            <div class="col-sm-2">
                <a class="quick-button" href="~/Access/BranchStaffIndex">
                    <i class="fa fa-user"></i>
                    <p>Home</p>
                </a>
            </div>


        </div>
    </div>
</div>