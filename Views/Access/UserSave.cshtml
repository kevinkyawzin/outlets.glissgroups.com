		            <div class="form-group">
			            <label class="control-label" for="input1">@Html.LabelFor(model => model.email)</label>
			            <div class="controls row">
                            <div class="col-lg-4">
                                @Html.TextBoxFor(model => model.email, new { @class ="form-control"})                                        
                            </div>
                             <span>@Html.ValidationMessageFor(model => model.email)</span>	
			            </div>
		            </div>
					<div class="form-group">
						<label class="control-label" for="selectError30">@Html.LabelFor(model => model.status)</label>
						<div class="controls row">
                            <div class="col-lg-4">
                            @Html.DropDownListFor(model => model.status, new SelectList(@ViewBag.StatusOptions,"Status","Status"), new { @class ="form-control"})
                            </div>
                            @Html.ValidationMessageFor(model => model.status)
						</div>
					</div>
		            <div class="form-actions">
			            <button type="submit" class="btn btn-primary" value="Save" >Save changes</button>
                        @*<a class="btn btn-primary" href="@Url.Action("UserSave", "Access", new { id = item.id })" title ="Edit User"></a>*@
			            <button type="reset" class="btn">Cancel</button>
		            </div>
                
			        <div class="row">		
				        <div class="col-lg-12">
					        <div class="box">
						        <div class="box-header" data-original-title>
							        <h2><i class="fa fa-key"></i><span class="break"></span>User's Permission Listing</h2>
							        <div class="box-icon">
								        <a href="#" class="btn-setting"><i class="icon-wrench"></i></a>
								        <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
								        <a href="#" class="btn-close"><i class="icon-remove"></i></a>
							        </div>
						        </div>
						        <div class="box-content">
							        <table class="table table-striped table-bordered bootstrap-datatable datatable">
							          <thead>
								          <tr>
									          <th>AccessType</th>
									          <th>Resource</th>
									          <th>Create</th>
									          <th>Read</th>
									          <th>Update</th>
                                              <th>Delete</th>                                      
                                              <th>Void</th>
                                              <th>UnVoid</th>
                                              <th>Print</th>
								          </tr>
                                        </thead>   
                                        <tbody>
                                            @foreach (var item in Model.accessRights)
                                            {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.accessTypes.accesstype  )
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Resources.resource)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.create)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.read)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.update)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.delete)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.voidField)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.unvoid)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.print)
                                                        </td>
                                                    </tr>                                         
                                            }
                                        </tbody>
                                    </table>							   
                                </div> @*box-content*@
                            </div> @*box*@
                        </div>
                    </div> @*row*@
