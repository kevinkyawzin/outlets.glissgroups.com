									          <th>Payment Mode</th>
									          <th>Received Amount</th>
									          <th>Cheque/CreditCart</th>                                              
									          <th>Status</th>
                                              <th></th>                                              
								          </tr>
                                        </thead>   
                                        <tbody>
                                            @foreach (var item in ViewBag.PaymentItemOptions)
                                            {
                                                    i = i + 1;
                                                    <tr>
                                                        <td>
                                                            @i
                                                        </td>
                                                        <td>
                                                            @*@item.createdate*@
                                                            @string.Format("{0:dd/MM/yyyy}",item.createdate)
