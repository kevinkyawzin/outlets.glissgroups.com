                                                        <td>
                                                            @item.paymentmode
                                                        </td>
                                                        <td>
                                                            @item.amountrecd
                                                        </td>
                                                        <td>
                                                            @item.chequecreditcard
                                                        </td>
                                                        <td>
                                                            @item.status
                                                        </td>
									                    <td class="center">
