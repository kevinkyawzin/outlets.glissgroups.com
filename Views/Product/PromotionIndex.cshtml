@model IEnumerable<BigMac.Models.Product_m_ProductPromotion>

@{
    ViewBag.Title = "PromotionIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var i = 0;        
}

        <div class="row">
				<div class="box col-sm-12">			                    
                    <div >
                        <p >
                        <a href="@Url.Action("PromotionSave", "Product", new { id = 0 })" >
	                        <i class="fa fa-plus" ></i> 
                            Add New Product Promotion
                        </a>
                        </p>
                    </div>
                </div>
            </div>
			<div class="row">		
				<div class="col-lg-12">
					<div class="box">
						<div class="box-header" data-original-title>
							<h2><i class="fa fa-user"></i><span class="break"></span>Members</h2>
							<div class="box-icon">
								<a href="#" class="btn-setting"><i class="fa fa-wrench"></i></a>
								<a href="#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
								<a href="#" class="btn-close"><i class="fa fa-times"></i></a>
							</div>
						</div>
						<div class="box-content">
							<table class="table table-striped table-bordered bootstrap-datatable datatable">
							  <thead>
								  <tr>
                                      <th>Sr.</th>
									  <th>Description</th>
									  <th>Start Date</th>
									  <th>End Date</th>
                                      <th>Price</th>
                                      <th>Rememption</th>
                                      <th></th>
								  </tr>
                                </thead>   
                                <tbody>
                                        @foreach (var item in Model)
                                        {
                                            i = i+1;
                                            <tr>
                                                <td>
                                                    @i
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.product.desc )
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.startdate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.enddate)
                                                </td>        
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.price)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.redemption)
                                                </td> 
									            <td class="center">
										            <a class="btn btn-info" href="@Url.Action("PromotionSave", "Product", new { id = item.id })" title ="Edit Promotion">
											            <i class="fa fa-edit"></i>                                            
										            </a>
										            @*<a class="btn btn-danger" href="@Url.Action("Delete", new { id=item.id })" title ="Remove Staff">*@
                                                    <a class="btn btn-danger" href="#" title ="Remove" onclick ='RemoveRow(this,@item.id)'>
											            <i class="fa fa-trash-o "></i> 
										            </a>
									            </td>                                                
                                            </tr>                                            
                                        }
                                </tbody>
                            </table>							   
                        </div> @*box-content*@
                    </div> @*box*@
                </div>
            </div> @*row*@

