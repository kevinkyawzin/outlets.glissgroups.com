    function getPageList(itemcount)
    {
        load = 0;
        var Htmlstr = "";

        for (var i = 1; i <= itemcount ; i++) {
            Htmlstr += "<option value=" + i + ">" + i + "</option>";
        }
        
        $('#cbopages').html(Htmlstr).show();        
    }


</script>

