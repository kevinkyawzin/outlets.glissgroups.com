@model IEnumerable<BigMac.Models.Product_m_Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var i = 0;    
}

			<div class="row">		
				<div class="col-lg-12">
					<div class="box">
						<div class="box-header" data-original-title>
							<h2><i class="fa fa-user"></i><span class="break"></span>Members</h2>
							<div class="box-icon">
								<a href="#" class="btn-setting"><i class="fa fa-wrench"></i></a>
								<a href="#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
								<a href="#" class="btn-close"><i class="fa fa-times"></i></a>
							</div>
						</div>
						<div class="box-content">
							<table class="table table-striped table-bordered bootstrap-datatable datatable">
							  <thead>
								  <tr>
                                      <th>Sr.</th>
									  <th>Product Code</th>
									  <th>Category</th>
									  <th>Description</th>
                                      <th>UOM</th>
                                      <th>Status</th>
                                      <th></th>
								  </tr>
                                </thead>   
                                <tbody>
                                        @foreach (var item in Model)
                                        {
                                            i = i+1;
                                            <tr>
                                                <td>
                                                    @i
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.productcode)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.category)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.desc)
                                                </td>        
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.uom)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.status)
                                                </td> 
									            <td class="center">
										            <a class="btn btn-info" href="@Url.Action("ProductPrice", "Product", new { productid = item.id,prc=1 })" title ="Edit Product">
											            <i class="fa fa-edit"></i>                                            
										            </a>
									            </td>                                                
                                            </tr>                                            
                                        }
                                </tbody>
                            </table>							   
                        </div> @*box-content*@
                    </div> @*box*@
                </div>
            </div> @*row*@

